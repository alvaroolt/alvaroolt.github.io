{% extends 'layout.twig' %} 
{% block body %}
    {% for blog in blogs %}
        <article class="blog">
            <div class="date">
                <time datetime=""> {{ blog.created_at|date("F jS \a\t g:ia") }} </time>
            </div>
            <header>
                <h2><a href="/symblogComposerCopia/blogs/show?id={{blog.id}}"> {{blog.title}} </a></h2>
            </header>
            <img src="/symblogComposerCopia/public/img/{{blog.imagen}}" />
            <div class="snippet">
                <p> {{blog.blog}} </p> 
                <p class="continue"><a href="#">Contine reading</a></p>
            </div>
            <footer class="meta">
                <p>Comments: <a href="#">Numero</a></p>
                <p>Posted by <span class="highlight"> {{blog.author}}</span> at {{ blog.date|date("F jS \a\t g:ia") }}</p>
                <p>Tags: <span class="highlight"> {{blog.tags}}
            </footer>
        <article>
    {% endfor %}
{% endblock %}